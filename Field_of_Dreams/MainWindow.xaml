<Window x:Class="Field_of_Dreams.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Field_of_Dreams"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Вопрос:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lb_TextQuestion" Content="" HorizontalAlignment="Left" Margin="63,10,0,0" VerticalAlignment="Top"/>
        <StackPanel x:Name="sp_Answer_Letters" Margin="10,80,10,274" Orientation="Horizontal" Height="50"/>
        <WrapPanel x:Name="wp_Question_Letters" Margin="265,150,265,84" Height="200" Orientation="Horizontal" Width="270"/>
        <Button x:Name="Clear" Content="Очистить" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" Height="50" Width="100" Click="ButtonClickClearAnswerLetters"/>
        <Button x:Name="Check" Content="Проверить" HorizontalAlignment="Center" Margin="0,355,0,0" VerticalAlignment="Top" Height="40" Width="100" Click="Check_Click"/>

    </Grid>
</Window>
